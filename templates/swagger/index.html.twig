{# templates/swagger/index.html.twig #}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>API Документация</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('swagger-ui/swagger-ui.css') }}">
    <style>
        body { margin: 0; }
        .topbar { display: none; } /* Скрываем стандартный топбар, если не нужен */
    </style>
</head>
<body>
<div id="swagger-ui"></div>

<script src="{{ asset('swagger-ui/swagger-ui-bundle.js') }}"></script>
<script src="{{ asset('swagger-ui/swagger-ui-standalone-preset.js') }}"></script>
<script>
    window.onload = function() {
        const ui = SwaggerUIBundle({
            url: "{{ asset('docs/openapi.yaml') }}",  // Путь к вашему YAML-файлу
            dom_id: '#swagger-ui',
            presets: [
                SwaggerUIBundle.presets.apis,
                SwaggerUIStandalonePreset
            ],
            layout: "StandaloneLayout",
            // Опционально: настройки
            docExpansion: "list",
            defaultModelsExpandDepth: -1  // Скрыть схемы по умолчанию
        });

        window.ui = ui;
    };
</script>
</body>
</html>